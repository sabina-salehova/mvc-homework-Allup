@model List<Category>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Categories</h4>
                <a class="btn btn-primary" asp-action="create">Create</a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Is Main</th>
                                <th>Is deleted</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.IsMain</td>
                                    <td>@item.IsDeleted</td>

                                    <td>
                                        <a class="btn btn-success" asp-action="update" asp-route-id="@item.Id">Update</a>

                                        <div style="display:inline-block">
                                            <form class="forms-sample" method="post" asp-action="Delete" asp-route-id="@item.Id">
                                                <button type="submit" class="btn btn-danger mr-2 isDelete">Delete</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>

        $(".isDelete").click(function () {
            alert("parent category silindikde onun alt category-leri de silinir");
        });

    </script>
}