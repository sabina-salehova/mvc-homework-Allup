
@model LanguageCreateViewModel
<div class="row col-sm-6">
    <div class="col-sm-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"> Create language</h4>
                <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IsoCode">Iso code</label>
                        <input asp-for="IsoCode" class="form-control" placeholder="Iso code">
                        <span asp-validation-for="IsoCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Image">Choose image</label>
                        <input asp-for="Image" class="form-control" placeholder="Sekil secin" accept="image/*">
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light" asp-action="Index">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>